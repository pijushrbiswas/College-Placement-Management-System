<!DOCTYPE html>
<html lang="en">

<%- include('includes/head.ejs') %>

</head>

<body>

	<div id="wrapper">

		<%- include('includes/navigation.ejs') %>

		<%- include('includes/sidebar.ejs') %>
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">ADD/UPDATE DRIVE</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            DRIVE DETAILS
                        </div>
                        <div class="panel-body">
                            <form role="form" method="post" action="/<%if(editing){ %>editDrive<%}else{ %>addDrives<%}%> ">
                                <input type="hidden" value="<%=csrfToken %>" name="_csrf">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label>Company Name</label>
                                            <input name="name" class="form-control" value="<% if(editing) { %> <%=drive.name%> <% } %>">
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label>Campus/Pool</label>
                                            <select name="campool" class="form-control" value="<% if(editing) { %> <%=drive.campool%> <% } %>">
                                                <option value="campus">Campus/Pool</option>
                                                <option value="campus">Campus</option>
                                                <option value="pool">Pool</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label>Date</label>
                                               <input type="date" name="date" class="form-control"  placeholder="DD/MM/YYYY" value="<% if(editing) { %> <%=drive.date%> <% } %>">
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <div class="form-group">
                                                <label>Company Website</label>
                                                <input name="website" class="form-control" value="<% if(editing) { %> <%=drive.website%> <% } %>">
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label>SSCLC/10th Aggregate</label>
                                            <input name="ssc" class="form-control" value="<% if(editing) { %> <%=drive.ssc%> <% } %>">
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <div class="form-group">
                                                <label>12th/Diploma Aggregate</label>
                                                <input name="hsc" class="form-control" value="<% if(editing) { %> <%=drive.hsc%> <% } %>">
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label>BE/BTech Aggregate</label>
                                            <input name="be" class="form-control" value="<% if(editing) { %> <%=drive.be%> <% } %>">
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <div class="form-group">
                                                <label class="control-label templatemo-block">Current Backlogs</label>
                                                <select name="cb" class="form-control" value="<% if(editing) { %> <%=drive.cb%> <% } %>">
                                                    <option value="select">Numbers</option>
                                                    <option value="0">0</option>
                                                    <option value="1">1</option>
                                                    <option value="2">2</option>
                                                    <option value="3">3</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="control-label templatemo-block">History of Backlogs</label>
                                            <select name="hob" class="form-control" value="<% if(editing) { %> <%=drive.hob%> <% } %>">
                                                <option value="Y/N">Y/N</option>
                                                <option value="yes">Yes</option>
                                                <option value="no">No</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <div class="form-group">
                                                <label class="control-label templatemo-block">Years of Study Break</label>
                                                <select name="yosb" class="form-control" value="<% if(editing) { %> <%=drive.yosb%> <% } %>" >
                                                    <option value="select">Years</option>
                                                    <option value="0">0</option>
                                                    <option value="1">1</option>
                                                    <option value="2">2</option>
                                                    <option value="3">3</option>
                                                    <option value="4">4</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Batch</label>
                                    <input name="batch" class="form-control" value="<% if(editing) { %> <%=drive.batch%> <% } %>">
                                </div>

                                <div class="form-group">
                                    <label>Drive Description</label>
                                    <textarea name="description" class="form-control" rows="6"> <% if(editing) { %> <%=drive.description%> <% } %> </textarea>
                                </div>

                                <% if(editing) { %> 
                                    <input type="hidden" value="<%=drive.id%>" name="id">
                                <% } %>
                                
                                <button type="submit" class="btn btn-primary"><% if(editing) { %> Update <% } else { %> Submit <% } %></button>
                                <button type="reset" class="btn btn-primary ">Reset</button>
                                
                            </form>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->
        <%- include('includes/scripts.ejs') %>

    </body>
    
</html>
